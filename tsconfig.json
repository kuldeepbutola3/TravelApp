{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react-native",
    "lib": ["es7"],
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,
    "target": "es2015",
    "sourceMap": true,
    "noImplicitReturns": true,
    "skipLibCheck": true,
    "plugins": [
      {
        "name": "typescript-styled-plugin"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "src": ["src"]
    }
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ],
  "include": ["src", "test"]
}
